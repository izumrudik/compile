fun conc(a:str, b:str) -> str {
	[len(a)+len(b)]out:char
	idx = 0
	while @idx < len(a) {
		out[@idx] = a[@idx]
		idx = @idx + 1
	}
	while @idx < len(a)+len(b) {
		out[@idx] = b[@idx-len(a)]
		idx = @idx + 1
	}
	return str(len(a)+len(b), out)
}

fun main() {
	set someone = "world"
	#what we have:
	putsln(conc(conc("Hello, ",someone),"!"))
	#what we want:
	#putsln(`Hello, {someone}!`)
}
const stderr 2

fun puts string:str { write(stdout, string) }
fun eputs string:str { write(stderr, string) }
fun fputs fd:int string:str { write(fd, string) }
fun putendl {
	puts('\n')
}
fun putsln string:str {
	puts(string)
	putendl()
}

fun putd a:int{
	if a < 10 {
		puts(str(1, ptr('0123456789')+a))
	} else {
		putd(a//10)
		putd(a%10)
	}
}

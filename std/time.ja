#Timespec
struct Timespec {
    sec:int
    nsec:int
}
use nanosleep(ptr(Timespec), ptr(Timespec)) -> int

fun sleep(spec:ptr(Timespec)) -> int {
	return nanosleep(spec,$ptr(Timespec)(Null))
}

fun delay(sec:int,nsec:int) -> int {
	delay:Timespec
	delay.sec = sec
	delay.nsec = nsec
	return sleep(delay)
}
